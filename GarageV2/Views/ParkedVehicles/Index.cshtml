@model IEnumerable<GarageV2.ViewModels.ParkedCarViewModel>

@{
    ViewData["Title"] = "Index";
}

<h4>Parkering</h4>
<hr />
@*
    <p>
        <a asp-action="Create">Create New</a>
    </p>
*@
<form asp-controller="ParkedVehicles" asp-action="Index">
    <div>
            <label for="search" class="">Reg-nummer: </label>
            <input id="search" class="" type="text" name="SearchString">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-car"></i> Sök
            </button>
        </div>        
    
</form>
<table class="table table-striped table-hover" style="margin-top: 15px">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkedVehicleType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeParked)
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="fas fa-parking"></i> Checkin</a>
            </th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RegNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParkedVehicleType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FormatedTimeParked)
                </td>
                <td>
                    <a asp-action="AddOrEdit" asp-route-id="@item.Id"><i class="fas fa-edit"></i> Ändra</a>
                    <a asp-action="DeleteConfirmed" asp-route-id="@item.Id" class="text-danger ml-1"><i class="fas fa-car"></i> Utcheckning</a>
                </td>
                @*
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                *@
            </tr>
        }
    </tbody>
</table>
