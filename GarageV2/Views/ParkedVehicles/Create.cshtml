@model GarageV2.Models.ParkedVehicle
@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>
<h4>ParkedVehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegNo" class="control-label"></label>
                <input asp-for="RegNo" class="form-control" onchange="RegNoCheck()" />
                <span asp-validation-for="RegNo" class="text-danger"></span>
                <span id="RegNoStatus" class="badge"></span>            
            </div>
            <div class="form-group">
                <label asp-for="ParkedVehicleType" class="control-label"></label>
                <select asp-for="ParkedVehicleType" asp-items="@Html.GetEnumSelectList<GarageV2.Models.VehicleType>()" class="form-control"></select>
                <span asp-validation-for="ParkedVehicleType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control">
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoWheels" class="control-label"></label>
                <input asp-for="NoWheels" class="form-control" />
                <span asp-validation-for="NoWheels" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
    function RegNoCheck(){
        $('#RegNoStatus').removeClass('badge-success').removeClass('badge-danger').addClass('badge-info')
        $('#RegNoStatus').html('Checking availability...')

        $.post("@Url.Action("CheckIfRegNoExists", "ParkedVehicles")",
            {
                regNo: $("#RegNo").val()
            },
            function(data){
                if(data == 1){
                    $('#RegNoStatus').removeClass('badge-info').addClass('badge-danger')
                    $('#RegNoStatus').html('Reg-number already exists')
                }
                else if(data == 0){
                    $('#RegNoStatus').removeClass('badge-info').addClass('badge-success')
                    $('#RegNoStatus').html('Reg-number available')
                }
            }
        )
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
