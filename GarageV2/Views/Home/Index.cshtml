@{
    ViewData["Title"] = "Home Page";
}

<script>
    $(function(){
        $(window).on("load resize", function(){
            let bgImageHeight = window.innerHeight - parseInt($("footer").css('height')) + parseInt($("footer").css('padding-top'));
            $("#home-page-bg").css("height", bgImageHeight);
            $("#home-page-bg").css("width", window.innerWidth);
        });
    });
</script>